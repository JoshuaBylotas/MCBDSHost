<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" arguments=".\MCBDS.Marketing.dll" stdoutLogEnabled="true" stdoutLogFile=".\logs\stdout" hostingModel="inprocess">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <environmentVariable name="ASPNETCORE_DETAILEDERRORS" value="true" />
        </environmentVariables>
      </aspNetCore>
      <!-- Enable detailed errors for debugging -->
      <httpErrors errorMode="Detailed" />
      <!-- Static file handling with proper MIME types for Blazor -->
      <staticContent>
        <mimeMap fileExtension=".js" mimeType="application/javascript" />
        <mimeMap fileExtension=".json" mimeType="application/json" />
        <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
        <mimeMap fileExtension=".dat" mimeType="application/octet-stream" />
        <mimeMap fileExtension=".blat" mimeType="application/octet-stream" />
        <mimeMap fileExtension=".br" mimeType="application/x-br" />
      </staticContent>
      <!-- Compression for better performance -->
      <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    </system.webServer>
  </location>
  <!-- ACME Challenge handling (handled in Program.cs middleware) -->
  <location path=".well-known/acme-challenge">
    <system.webServer>
      <staticContent>
        <mimeMap fileExtension="." mimeType="text/plain" />
      </staticContent>
    </system.webServer>
  </location>
</configuration>