@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google Analytics (gtag.js) - MUST BE IN HEAD FOR VERIFICATION -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6408KZLKH4"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-6408KZLKH4');
    </script>
    
    <!-- Meta Tags for SEO -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Professional web-based management for Minecraft Bedrock Dedicated Server. Monitor, control, and automate your server with real-time statistics and smart commands." />
    <meta name="keywords" content="Minecraft, Bedrock, Server, Management, Docker, .NET" />
    <meta name="author" content="MCBDSHost" />
    
    <!-- Search Engine Meta Tags -->
    <link rel="canonical" href="https://www.mc-bds.com/" />
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
    
    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="MCBDSHost - Professional Minecraft Server Management" />
    <meta property="og:description" content="Manage your Minecraft Bedrock Dedicated Server like a pro with real-time monitoring, command console, and automated backups." />
    <meta property="og:url" content="https://www.mc-bds.com/" />
    
    <link rel="stylesheet" href="css/marketing.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <title>MCBDSHost - Professional Minecraft Bedrock Server Management</title>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-controller me-2 text-primary"></i>
                MCBDSHost
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/get-started">Get Started</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="https://www.gofundme.com/f/support-minecraft-server-utilities-development" target="_blank">
                            <i class="bi bi-heart-fill me-1"></i>Donate
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @Body
    </main>

    <!-- Donation Banner -->
    <section class="donation-banner py-4 bg-warning bg-opacity-10 border-top border-warning">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h4 class="mb-2">
                        <i class="bi bi-heart-fill text-danger me-2"></i>
                        Support MCBDSHost Development
                    </h4>
                    <p class="mb-0 text-muted">
                        Help us continue developing and improving MCBDSHost. Your support makes a difference!
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                    <a href="https://www.gofundme.com/f/support-minecraft-server-utilities-development" 
                       class="btn btn-warning btn-lg" target="_blank"
                       onclick="gtag('event', 'donation_click', {'event_category': 'engagement', 'event_label': 'footer_banner'});">
                        <i class="bi bi-heart-fill me-2"></i>Support Us on GoFundMe
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- GoFundMe Embed Widget -->
    <section class="gofundme-widget py-4 bg-light">
        <div class="container text-center">
            <div class="gfm-embed" data-url="https://www.gofundme.com/f/support-minecraft-server-utilities-development/widget/medium?sharesheet=undefined&attribution_id=sl:0e15edfd-d25f-4499-92d6-462679332e77"></div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">
                        <i class="bi bi-controller me-2"></i>
                        MCBDSHost
                    </h5>
                    <p class="text-muted">
                        Professional web-based management for Minecraft Bedrock Dedicated Server.
                    </p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-muted text-decoration-none">Home</a></li>
                        <li><a href="/features" class="text-muted text-decoration-none">Features</a></li>
                        <li><a href="/get-started" class="text-muted text-decoration-none">Get Started</a></li>
                        <li><a href="/contact" class="text-muted text-decoration-none">Contact & Support</a></li>
                        <li><a href="https://www.gofundme.com/f/support-minecraft-server-utilities-development" class="text-warning text-decoration-none" target="_blank">
                            <i class="bi bi-heart-fill me-1"></i>Donate
                        </a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Resources</h6>
                    <ul class="list-unstyled">
                        <li><a href="/get-started" class="text-muted text-decoration-none">Documentation</a></li>
                        <li><a href="/get-started#download" class="text-muted text-decoration-none">Download</a></li>
                        <li><a href="mailto:support@mc-bds.com" class="text-muted text-decoration-none">Email Support</a></li>
                        <li><a href="https://www.minecraft.net/en-us/eula" class="text-muted text-decoration-none" target="_blank">Minecraft EULA</a></li>
                    </ul>
                </div>
            </div>
            <hr class="border-secondary my-4" />
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <small class="text-muted">
                        © @DateTime.Now.Year MCBDSHost. Open Source under MIT License.
                    </small>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small class="text-muted">
                        Built with .NET 10 & Blazor | <a href="mailto:support@mc-bds.com" class="text-muted">support@mc-bds.com</a>
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- GoFundMe Embed Script -->
    <script defer src="https://www.gofundme.com/static/js/embed.js"></script>
</body>
</html>
