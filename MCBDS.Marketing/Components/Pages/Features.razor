@page "/features"

<PageTitle>Features - MCBDSHost</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Powerful Features</h1>
        <p class="lead text-muted">Everything you need to manage your Minecraft Bedrock Server</p>
    </div>

    <!-- Core Management Features -->
    <section class="mb-5">
        <h2 class="h3 mb-4"><i class="bi bi-gear-fill text-primary me-2"></i>Core Management</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">
                            <i class="bi bi-speedometer2 text-primary me-2"></i>
                            Real-Time Server Monitoring
                        </h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Live CPU and memory usage</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Server uptime tracking</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Process statistics</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Auto-refresh dashboards (5-second intervals)</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>API host monitoring</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">
                            <i class="bi bi-terminal text-success me-2"></i>
                            Smart Command Console
                        </h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>IntelliSense autocomplete for 40+ commands</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Real-time player name suggestions</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Parameter hints and validation</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Live server log viewing</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Command history and examples</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Player Management -->
    <section class="mb-5">
        <h2 class="h3 mb-4"><i class="bi bi-people-fill text-success me-2"></i>Player Management</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">
                            <i class="bi bi-person-check text-success me-2"></i>
                            Real-Time Player Tracking
                        </h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Live online player list</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Pulsing indicators for active players</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Current/maximum player count display</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Join/leave event parsing</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Player name autocomplete in commands</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">
                            <i class="bi bi-shield-check text-info me-2"></i>
                            Player Administration
                        </h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Kick and ban players</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Operator management</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Whitelist control</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Send private messages</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Quick player targeting</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Backup & Recovery -->
    <section class="mb-5">
        <h2 class="h3 mb-4"><i class="bi bi-clock-history text-info me-2"></i>Backup & Recovery</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">
                            <i class="bi bi-save text-info me-2"></i>
                            Automated Backups
                        </h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Configurable backup frequency</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Automatic backup rotation</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Maximum backups to keep setting</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Custom backup directory</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Manual backup trigger</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">
                            <i class="bi bi-folder-symlink text-warning me-2"></i>
                            Backup Management
                        </h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Browse all backups</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>View backup size and date</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>One-click restore (coming soon)</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Delete individual backups</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Backup status monitoring</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Configuration -->
    <section class="mb-5">
        <h2 class="h3 mb-4"><i class="bi bi-sliders text-warning me-2"></i>Server Configuration</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">
                            <i class="bi bi-file-earmark-text text-warning me-2"></i>
                            Server Properties Editor
                        </h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Web-based server.properties editing</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Organized by categories</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Detailed property descriptions</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Validation and type hints</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Last modified timestamp</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">
                            <i class="bi bi-joystick text-danger me-2"></i>
                            Game Settings
                        </h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Game mode configuration</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Difficulty settings</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>World generation options</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Player permissions</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Anti-cheat configuration</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Multi-Platform -->
    <section class="mb-5">
        <h2 class="h3 mb-4"><i class="bi bi-phone text-secondary me-2"></i>Multi-Platform Access</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center">
                    <div class="card-body">
                        <i class="bi bi-browser-chrome display-3 text-primary mb-3"></i>
                        <h3 class="h5 card-title">Web Interface</h3>
                        <p class="text-muted">
                            Access from any browser. Responsive design works on desktop, tablet, and mobile.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center">
                    <div class="card-body">
                        <i class="bi bi-phone display-3 text-success mb-3"></i>
                        <h3 class="h5 card-title">Native Android App</h3>
                        <p class="text-muted">
                            Dedicated Android app built with .NET MAUI. Native performance and offline capabilities.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center">
                    <div class="card-body">
                        <i class="bi bi-windows display-3 text-info mb-3"></i>
                        <h3 class="h5 card-title">Desktop Client</h3>
                        <p class="text-muted">
                            Cross-platform desktop application for Windows, macOS, and Linux (coming soon).
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Technical Features -->
    <section class="mb-5">
        <h2 class="h3 mb-4"><i class="bi bi-cpu text-primary me-2"></i>Technical Capabilities</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">Docker Integration</h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Containerized deployment</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Docker Compose orchestration</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Isolated environment</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Easy updates and rollbacks</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Resource management</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 card-title">RESTful API</h3>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Full REST API for automation</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>OpenAPI/Swagger documentation</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Health check endpoints</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Extensible architecture</li>
                            <li><i class="bi bi-check-circle-fill text-success me-2"></i>Custom integrations</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Coming Soon -->
    <section class="mb-5 bg-light rounded p-4">
        <h2 class="h3 mb-4"><i class="bi bi-stars text-warning me-2"></i>Coming Soon</h2>
        <div class="row">
            <div class="col-md-6">
                <ul class="list-unstyled">
                    <li><i class="bi bi-clock text-muted me-2"></i>One-click world restore</li>
                    <li><i class="bi bi-clock text-muted me-2"></i>Scheduled server restarts</li>
                    <li><i class="bi bi-clock text-muted me-2"></i>Performance metrics graphs</li>
                    <li><i class="bi bi-clock text-muted me-2"></i>Email notifications</li>
                </ul>
            </div>
            <div class="col-md-6">
                <ul class="list-unstyled">
                    <li><i class="bi bi-clock text-muted me-2"></i>Multi-server management</li>
                    <li><i class="bi bi-clock text-muted me-2"></i>Player statistics tracking</li>
                    <li><i class="bi bi-clock text-muted me-2"></i>Plugin/addon management</li>
                    <li><i class="bi bi-clock text-muted me-2"></i>Automatic Minecraft updates</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <div class="text-center py-5">
        <h2 class="h3 mb-4">Ready to Experience These Features?</h2>
        <a href="/get-started" class="btn btn-primary btn-lg">
            <i class="bi bi-download me-2"></i>Get Started Now
        </a>
    </div>
</div>
