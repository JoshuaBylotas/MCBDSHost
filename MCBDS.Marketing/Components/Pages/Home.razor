@page "/"

<PageTitle>MCBDSHost - Professional Minecraft Bedrock Server Management</PageTitle>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4">
                    Manage Your Minecraft Bedrock Server
                    <span class="text-primary">Like a Pro</span>
                </h1>
                <p class="lead mb-4">
                    Professional web-based management for Minecraft Bedrock Dedicated Server.
                    Monitor, control, and automate your server with an intuitive interface.
                </p>
                <div class="hero-buttons">
                    <a href="/features" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-rocket-takeoff me-2"></i>Explore Features
                    </a>
                    <a href="/get-started" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-download me-2"></i>Get Started
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="dashboard-preview">
                    <img src="images/dashboard-preview.png" 
                         alt="MCBDSHost Dashboard - Server Overview with real-time statistics"
                         class="img-fluid rounded shadow-lg"
                         style="border: 4px solid rgba(0,0,0,0.2);" />
                    <div class="dashboard-badge">
                        <i class="bi bi-eye-fill me-2"></i>Live Dashboard Preview
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Key Features Section -->
<section class="features-overview py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Everything You Need</h2>
            <p class="lead text-muted">Powerful features to manage your Minecraft server effortlessly</p>
        </div>

        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100 p-4">
                    <div class="feature-icon bg-primary bg-gradient">
                        <i class="bi bi-speedometer2"></i>
                    </div>
                    <h3 class="h4 mb-3">Real-Time Monitoring</h3>
                    <p class="text-muted">
                        Live server statistics including CPU usage, memory consumption, uptime, and player count.
                        Stay informed with auto-refreshing dashboards.
                    </p>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100 p-4">
                    <div class="feature-icon bg-success bg-gradient">
                        <i class="bi bi-terminal"></i>
                    </div>
                    <h3 class="h4 mb-3">Smart Command Console</h3>
                    <p class="text-muted">
                        IntelliSense-powered command interface with autocomplete, player suggestions,
                        and real-time log viewing. 40+ Minecraft commands with parameter hints.
                    </p>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100 p-4">
                    <div class="feature-icon bg-info bg-gradient">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <h3 class="h4 mb-3">Automated Backups</h3>
                    <p class="text-muted">
                        Schedule automatic world backups with configurable frequency and retention.
                        Restore your world with one click. Never lose progress again.
                    </p>
                </div>
            </div>

            <!-- Feature 4 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100 p-4">
                    <div class="feature-icon bg-warning bg-gradient">
                        <i class="bi bi-gear"></i>
                    </div>
                    <h3 class="h4 mb-3">Server Configuration</h3>
                    <p class="text-muted">
                        Edit server.properties directly from the web interface.
                        Organized by category for easy navigation. No SSH or FTP needed.
                    </p>
                </div>
            </div>

            <!-- Feature 5 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100 p-4">
                    <div class="feature-icon bg-danger bg-gradient">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 class="h4 mb-3">Player Tracking</h3>
                    <p class="text-muted">
                        See who's online in real-time with pulsing live indicators. Track player join/leave events.
                        Quick player management from the dashboard.
                    </p>
                </div>
            </div>

            <!-- Feature 6 -->
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100 p-4">
                    <div class="feature-icon bg-secondary bg-gradient">
                        <i class="bi bi-phone"></i>
                    </div>
                    <h3 class="h4 mb-3">Multi-Platform</h3>
                    <p class="text-muted">
                        Access from desktop, mobile, or tablet. Native Android app available.
                        Manage your server from anywhere, anytime.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Technology Stack -->
<section class="tech-stack py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Built with Modern Technology</h2>
            <p class="lead text-muted">Leveraging the latest .NET and Docker technologies</p>
        </div>

        <div class="row g-4 justify-content-center">
            <div class="col-6 col-md-3 text-center">
                <div class="tech-badge p-4">
                    <i class="bi bi-microsoft display-4 text-primary"></i>
                    <p class="mt-2 fw-bold">.NET 10</p>
                    <small class="text-muted">Latest Framework</small>
                </div>
            </div>
            <div class="col-6 col-md-3 text-center">
                <div class="tech-badge p-4">
                    <i class="bi bi-window-desktop display-4 text-primary"></i>
                    <p class="mt-2 fw-bold">Blazor</p>
                    <small class="text-muted">Modern Web UI</small>
                </div>
            </div>
            <div class="col-6 col-md-3 text-center">
                <div class="tech-badge p-4">
                    <i class="bi bi-box-seam display-4 text-primary"></i>
                    <p class="mt-2 fw-bold">Docker</p>
                    <small class="text-muted">Easy Deployment</small>
                </div>
            </div>
            <div class="col-6 col-md-3 text-center">
                <div class="tech-badge p-4">
                    <i class="bi bi-phone display-4 text-primary"></i>
                    <p class="mt-2 fw-bold">.NET MAUI</p>
                    <small class="text-muted">Native Mobile</small>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Deployment Options -->
<section class="deployment py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Flexible Deployment</h2>
            <p class="lead text-muted">Deploy anywhere you want</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="deployment-card text-center p-4 h-100">
                    <i class="bi bi-hdd-rack display-3 text-primary mb-3"></i>
                    <h3 class="h4">Windows Server</h3>
                    <p class="text-muted mb-3">
                        Full guide for Windows Server 2019/2022/2025 deployment with Docker Desktop.
                    </p>
                    <a href="/get-started#windows" class="btn btn-outline-primary">Learn More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="deployment-card text-center p-4 h-100">
                    <i class="bi bi-ubuntu display-3 text-danger mb-3"></i>
                    <h3 class="h4">Linux</h3>
                    <p class="text-muted mb-3">
                        Deploy on Ubuntu, Debian, or any Docker-compatible Linux distribution.
                    </p>
                    <a href="/get-started#linux" class="btn btn-outline-danger">Learn More</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="deployment-card text-center p-4 h-100">
                    <i class="bi bi-house display-3 text-success mb-3"></i>
                    <h3 class="h4">Home Server</h3>
                    <p class="text-muted mb-3">
                        Perfect for home servers and personal hosting. Minimal resource requirements.
                    </p>
                    <a href="/get-started#home" class="btn btn-outline-success">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="display-4 fw-bold mb-4">Ready to Get Started?</h2>
        <p class="lead mb-4">
            Download MCBDSHost today and take control of your Minecraft Bedrock Server
        </p>
        <div class="cta-buttons">
            <a href="/get-started" class="btn btn-light btn-lg">
                <i class="bi bi-download me-2"></i>Download Now
            </a>
        </div>
        <p class="mt-4 mb-0">
            <small>Open Source • Free • MIT License</small>
        </p>
    </div>
</section>
