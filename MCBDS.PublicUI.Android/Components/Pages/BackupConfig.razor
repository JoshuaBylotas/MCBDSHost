@page "/backup-settings"
@using MCBDS.ClientUI.Shared.Services
@using Microsoft.JSInterop
@inject BedrockApiService ApiService
@inject IJSRuntime JSRuntime

<PageTitle>Backup Settings</PageTitle>

<h1><i class="bi bi-archive me-2"></i>Backup Settings</h1>

<p>Configure automatic backup settings for the Minecraft server.</p>

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2">Loading backup settings...</p>
    </div>
}
else if (!string.IsNullOrEmpty(connectionError))
{
    <div class="alert alert-danger" role="alert">
        <h5><i class="bi bi-wifi-off me-1"></i>Connection Error</h5>
        <p>@connectionError</p>
        <button class="btn btn-outline-danger btn-sm" @onclick="LoadSettings">
            <i class="bi bi-arrow-clockwise me-1"></i>Retry
        </button>
    </div>
    
    <div class="card border-warning mt-3">
        <div class="card-body">
            <h5 class="card-title"><i class="bi bi-lightbulb me-1"></i>Troubleshooting Tips</h5>
            <ul class="mb-0">
                <li>Make sure the API server is running</li>
                <li>Check if the server URL is correct (use the Server dropdown above)</li>
                <li>Verify there are no firewall issues blocking the connection</li>
            </ul>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-gear me-1"></i>Backup Configuration</h5>
                    
                    <div class="mb-3">
                        <label for="frequencyInput" class="form-label">Backup Frequency (minutes)</label>
                        <input type="number" 
                               class="form-control" 
                               id="frequencyInput"
                               @bind="frequencyMinutes" 
                               @bind:event="oninput"
                               min="1" 
                               max="1440"
                               disabled="@isSaving" />
                        <div class="form-text">How often backups should run (1-1440 minutes)</div>
                    </div>

                    <div class="mb-3">
                        <label for="directoryInput" class="form-label">Output Directory</label>
                        <input type="text" 
                               class="form-control" 
                               id="directoryInput"
                               @bind="backupDirectory" 
                               @bind:event="oninput"
                               placeholder="e.g., C:\Backups\Minecraft"
                               disabled="@isSaving" />
                        <div class="form-text">Location where backup files will be stored</div>
                    </div>

                    <div class="mb-3">
                        <label for="maxBackupsInput" class="form-label">Maximum Backups to Keep</label>
                        <input type="number" 
                               class="form-control" 
                               id="maxBackupsInput"
                               @bind="maxBackupsToKeep" 
                               @bind:event="oninput"
                               min="0" 
                               max="100"
                               disabled="@isSaving" />
                        <div class="form-text">Number of backups to retain (0 = keep all)</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" 
                                @onclick="SaveSettings" 
                                disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            }
                            else
                            {
                                <i class="bi bi-floppy me-1"></i>
                            }
                            Save Settings
                        </button>
                        <button class="btn btn-success" 
                                @onclick="TriggerManualBackup" 
                                disabled="@isBackingUp">
                            @if (isBackingUp)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            }
                            else
                            {
                                <i class="bi bi-play-fill me-1"></i>
                            }
                            Backup Now
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(statusMessage))
                    {
                        <div class="alert @statusClass mt-3" role="alert">
                            @((MarkupString)statusMessage.Replace("\n", "<br/>"))
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-sliders me-1"></i>Current Settings</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Frequency:</dt>
                        <dd class="col-sm-7">@frequencyMinutes minutes</dd>
                        
                        <dt class="col-sm-5">Output Directory:</dt>
                        <dd class="col-sm-7">
                            @if (string.IsNullOrWhiteSpace(backupDirectory))
                            {
                                <em class="text-muted">Not set</em>
                            }
                            else
                            {
                                <small>@backupDirectory</small>
                            }
                        </dd>
                        
                        <dt class="col-sm-5">Max Backups:</dt>
                        <dd class="col-sm-7">
                            @if (maxBackupsToKeep == 0)
                            {
                                <span>Unlimited (keep all)</span>
                            }
                            else
                            {
                                <span>@maxBackupsToKeep backups</span>
                            }
                        </dd>
                    </dl>
                    <div class="mt-2">
                        <small class="text-muted"><i class="bi bi-clock me-1"></i>Last loaded: @lastLoadTime.ToString("HH:mm:ss")</small>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0"><i class="bi bi-folder2-open me-1"></i>Existing Backups</h5>
                        <button class="btn btn-sm btn-outline-primary" @onclick="LoadBackups" disabled="@isLoadingBackups">
                            @if (isLoadingBackups)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            }
                            else
                            {
                                <i class="bi bi-arrow-clockwise me-1"></i>
                            }
                            Refresh
                        </button>
                    </div>

                    @if (backups == null || !backups.Any())
                    {
                        <p class="text-muted"><i class="bi bi-inbox me-1"></i>No backups found.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Created</th>
                                        <th>Size</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var backup in backups)
                                    {
                                        <tr>
                                            <td><small>@backup.Name</small></td>
                                            <td><small>@backup.CreatedAt.ToString("g")</small></td>
                                            <td><small>@backup.SizeMB.ToString("F2") MB</small></td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger" 
                                                        @onclick="() => DeleteBackup(backup.Name)"
                                                        disabled="@isDeletingBackup">
                                                    <i class="bi bi-trash me-1"></i>Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <p class="text-muted mb-0"><small>Total: @backups.Count backup(s)</small></p>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-info-circle me-1"></i>Information</h5>
                    <ul class="mb-0">
                        <li>Settings are stored on the API server and reload automatically</li>
                        <li>Backup frequency can be set between 1 and 1440 minutes (24 hours)</li>
                        <li>Make sure the output directory exists and has write permissions</li>
                        <li><strong>No restart required!</strong> Changes take effect immediately</li>
                        <li>Use "Backup Now" to trigger an immediate backup without waiting</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private int frequencyMinutes = 30;
    private string backupDirectory = string.Empty;
    private int maxBackupsToKeep = 10;
    private string statusMessage = string.Empty;
    private string statusClass = "alert-info";
    private string? connectionError;
    private bool isSaving = false;
    private bool isLoading = true;
    private bool isBackingUp = false;
    private bool isLoadingBackups = false;
    private bool isDeletingBackup = false;
    private List<BackupInfo> backups = new();
    private DateTime lastLoadTime = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
        await LoadBackups();
    }

    private async Task LoadSettings()
    {
        isLoading = true;
        statusMessage = string.Empty;
        connectionError = null;
        StateHasChanged();
        
        var result = await ApiService.GetBackupConfigAsync();
        
        if (result.Success && result.Data != null)
        {
            frequencyMinutes = result.Data.FrequencyMinutes;
            backupDirectory = result.Data.BackupDirectory;
            maxBackupsToKeep = result.Data.MaxBackupsToKeep;
            lastLoadTime = DateTime.Now;
        }
        else
        {
            if (result.ErrorType == ApiErrorType.ConnectionFailed)
            {
                connectionError = result.ErrorMessage;
            }
            else
            {
                SetStatus(result.ErrorMessage ?? "Failed to load settings from API.", "alert-warning");
            }
        }
        
        isLoading = false;
        StateHasChanged();
    }

    private async Task SaveSettings()
    {
        if (frequencyMinutes < 1 || frequencyMinutes > 1440)
        {
            SetStatus("Frequency must be between 1 and 1440 minutes", "alert-warning");
            return;
        }

        if (string.IsNullOrWhiteSpace(backupDirectory))
        {
            SetStatus("Please specify an output directory", "alert-warning");
            return;
        }

        if (maxBackupsToKeep < 0)
        {
            SetStatus("Max backups must be 0 or greater", "alert-warning");
            return;
        }

        var savedFrequency = frequencyMinutes;
        var savedDirectory = backupDirectory;
        var savedMaxBackups = maxBackupsToKeep;
        
        isSaving = true;
        statusMessage = string.Empty;
        StateHasChanged();

        var (success, message, savedConfig) = await ApiService.UpdateBackupConfigAsync(savedFrequency, savedDirectory, savedMaxBackups);
        
        if (success)
        {
            frequencyMinutes = savedFrequency;
            backupDirectory = savedDirectory;
            maxBackupsToKeep = savedMaxBackups;
            lastLoadTime = DateTime.Now;
            
            SetStatus($"<i class=\"bi bi-check-circle me-1\"></i>Success! {message}<br/><br/>Settings saved successfully!", "alert-success");
        }
        else
        {
            SetStatus($"<i class=\"bi bi-x-circle me-1\"></i>Failed to save settings: {message}", "alert-danger");
        }
        
        isSaving = false;
        StateHasChanged();
    }

    private async Task TriggerManualBackup()
    {
        isBackingUp = true;
        SetStatus("<i class=\"bi bi-hourglass-split me-1\"></i>Triggering manual backup...", "alert-info");
        StateHasChanged();

        var (success, message) = await ApiService.TriggerManualBackupAsync();
        
        if (success)
        {
            SetStatus($"<i class=\"bi bi-check-circle me-1\"></i>Success! {message}<br/><br/>Backup is running in the background.", "alert-success");
            await Task.Delay(3000);
            await LoadBackups();
        }
        else
        {
            SetStatus($"<i class=\"bi bi-x-circle me-1\"></i>Failed to trigger backup: {message}", "alert-danger");
        }
        
        isBackingUp = false;
        StateHasChanged();
    }

    private async Task LoadBackups()
    {
        isLoadingBackups = true;
        StateHasChanged();

        var result = await ApiService.GetBackupListAsync();
        
        if (result.Success && result.Data?.backups != null)
        {
            backups = result.Data.backups;
        }
        else
        {
            backups = new List<BackupInfo>();
            if (!string.IsNullOrEmpty(result.ErrorMessage) && string.IsNullOrEmpty(connectionError))
            {
                SetStatus($"Could not load backups: {result.ErrorMessage}", "alert-warning");
            }
        }
        
        isLoadingBackups = false;
        StateHasChanged();
    }

    private async Task DeleteBackup(string backupName)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete backup '{backupName}'?");
        
        if (!confirmed)
        {
            return;
        }

        isDeletingBackup = true;
        StateHasChanged();

        var (success, message) = await ApiService.DeleteBackupAsync(backupName);
        
        if (success)
        {
            SetStatus($"<i class=\"bi bi-check-circle me-1\"></i>Backup '{backupName}' deleted successfully", "alert-success");
            await LoadBackups();
        }
        else
        {
            SetStatus($"<i class=\"bi bi-x-circle me-1\"></i>Failed to delete backup: {message}", "alert-danger");
        }
        
        isDeletingBackup = false;
        StateHasChanged();
    }

    private void SetStatus(string message, string cssClass)
    {
        statusMessage = message;
        statusClass = cssClass;
    }
}
