<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Debug configuration - allows all cleartext traffic in DEBUG builds -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
    
    <!-- Allow cleartext (HTTP) traffic for specific domains -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow localhost and emulator -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        
        <!-- Allow your production server domain (includes all subdomains like winserver03) -->
        <domain includeSubdomains="true">bylotas.net</domain>
    </domain-config>
    
    <!-- Base config for HTTPS (always allowed) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
