<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MCBDS.PublicUI.Android"
             xmlns:components="clr-namespace:MCBDS.PublicUI.Android.Components"
             x:Class="MCBDS.PublicUI.Android.MainPage"
             BackgroundColor="White">

    <BlazorWebView x:Name="blazorWebView" 
                   HostPage="wwwroot/index.html"
                   BlazorWebViewInitializing="OnBlazorWebViewInitializing"
                   BlazorWebViewInitialized="OnBlazorWebViewInitialized">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
